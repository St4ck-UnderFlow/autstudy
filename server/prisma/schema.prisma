generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique @default(uuid())
  name      String
  createdAt DateTime @default(now())
  cpf       String   @unique
  email     String   @unique
  password  String
  userType  String
  roles     Role[]

  Teacher Teacher?
  Student Student?
}

model Teacher {
  id          String @id @unique @default(uuid())
  userId      String @unique
  degreeLevel String

  user User @relation(fields: [userId], references: [id])
}

model Student {
  id           String @id @unique @default(uuid())
  userId       String @unique
  supportLevel String

  user User @relation(fields: [userId], references: [id])
}

model Room {
  id        String   @id @unique @default(uuid())
  title     String
  createdAt DateTime @default(now())
}

model Role {
  id        String   @id @unique @default(uuid())
  name      String
  userType  String[]
  createdAt DateTime @default(now())

  users User[]
}